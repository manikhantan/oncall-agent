# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
PORT=8000
HOST=0.0.0.0

# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
# Path to GCP service account credentials JSON file
GCP_CREDENTIALS_JSON=/path/to/credentials.json
# Or provide the JSON content as a string:
# GCP_CREDENTIALS_JSON='{"type": "service_account", "project_id": "...", ...}'

# GCP Logging filter (optional - defaults to all logs)
# Example filters:
# - resource.type="gce_instance"
# - severity >= "ERROR"
# - resource.type="k8s_container" AND severity >= "WARNING"
GCP_LOG_FILTER=

# Maximum number of logs to fetch per request
GCP_LOG_LIMIT=100

# AI/LLM Configuration
# Choose provider: "openai" or "anthropic"
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
LLM_MODEL=gpt-4
# Or use gpt-3.5-turbo for faster/cheaper analysis

# Anthropic Configuration (alternative to OpenAI)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
# LLM_MODEL=claude-3-sonnet-20240229

# LLM Settings
LLM_TEMPERATURE=0.7

# Analysis Configuration
ANALYSIS_OUTPUT_DIR=analysis_reports
MAX_LOG_ENTRIES_TO_ANALYZE=50
